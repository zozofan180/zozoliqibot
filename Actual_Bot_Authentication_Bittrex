import http.client
import urllib
from urllib import parse
import json
import hashlib
from hashlib import sha512
import hmac
import time

api_key = ''
api_secret = ''


def get_info():
    nonce = int(round(time.time() - 139862111)*10)
    parms = {"method":"getbalances",
              "nonce": nonce}

    parms = urllib.parse.urlencode(parms)
    secret_bytes = bytes(api_secret, 'latin-1')
    hashed = hmac.new(secret_bytes, parms.encode(), hashlib.sha512)
    sign = hashed.hexdigest()

    headers = {"Content-type":"application/x-www-form-urlencoded",
               "Key":api_key,
               "Signature": sign}

    conn = http.client.HTTPSConnection("bittrex.com/api/v1.1/")
    conn.request("Get",parms, headers)
    response = conn.getresponse()
    print(response.status,response.reason)
    conn.close()
